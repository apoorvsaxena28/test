@Configuration
public class JndiDataSourceConfig {

    private DataSource jndi(String name) {
        JndiDataSourceLookup jndi = new JndiDataSourceLookup();
        jndi.setResourceRef(true);
        return jndi.getDataSource(name);
    }

    @Bean(name="defaultDS") public DataSource defaultDS() { return jndi("jdbc"); }
    @Bean(name="gendartActiveDS") public DataSource gendartActiveDS() { return jndi("jdbc/gendartActive"); }
    @Bean(name="userAdminDS") public DataSource userAdminDS() { return jndi("jdbc/userAdmin"); }
    @Bean(name="gendartLdeDS") public DataSource gendartLdeDS() { return jndi("jdbc/gendartLDE"); }
    @Bean(name="gendartDfsDS") public DataSource gendartDfsDS() { return jndi("jdbc/gendartDFS"); }
    @Bean(name="gendartPcdeDS") public DataSource gendartPcdeDS() { return jndi("jdbc/gendartPCDE"); }
    @Bean(name="gendartIcdpDS") public DataSource gendartIcdpDS() { return jndi("jdbc/gendartICDP"); }
    @Bean(name="gendartCrdeDS") public DataSource gendartCrdeDS() { return jndi("jdbc/gendartCRDE"); }
    @Bean(name="gendartIffDS") public DataSource gendartIffDS() { return jndi("jdbc/gendartIFF"); }
    @Bean(name="gendartFrdeDS") public DataSource gendartFrdeDS() { return jndi("jdbc/gendartFRDE"); }
    @Bean(name="gendartFwdeDS") public DataSource gendartFwdeDS() { return jndi("jdbc/gendartFWDE"); }
}