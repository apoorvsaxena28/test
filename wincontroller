// REST Controller Class
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;
import java.util.List;

@RestController
@RequestMapping("/api/services")
public class WindowsServiceController {

    private final WindowsServiceDiscoveryService service;

    @Autowired
    public WindowsServiceController(WindowsServiceDiscoveryService service) {
        this.service = service;
    }

    @GetMapping("/details")
    public ResponseEntity<List<WindowsService>> getServiceDetails() {
        List<WindowsService> serviceDetails = service.findAllServiceDetails();
        return ResponseEntity.ok(serviceDetails);
    }
}


